<header class="bg-white shadow py-6 px-6 sm:px-10">
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold text-blue-700">
      <a href="/"> My PDF Tools </a>
    </h1>

    <nav class="mt-4 flex flex-wrap gap-4">
      <% Object.entries(tools).forEach(function ([key, tool]){ const isActive =
      (activeTool === tools[key].name); %>
      <a
        href="<%= tool.href %>"
        class="text-sm px-3 py-1.5 rounded-md transition <%= isActive ? 'bg-blue-100 text-blue-700 font-semibold shadow-sm' : 'text-gray-600 hover:text-blue-700 hover:bg-gray-100' %>"
      >
        <%= tool.name %>
      </a>
      <% }) %>
    </nav>
    <span class="text-sm text-gray-500">Built by Sami</span>
  </div>
</header>
